{
  "name": "hypershift",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "description": "HyperShift â€” run the full app from the repo root",
  "scripts": {
    "hypershift": "node scripts/start-dev.mjs",
    "dev": "node scripts/start-dev.mjs",
    "demo": "concurrently --kill-others=false \"pnpm dev\" \"node scripts/demo.mjs\"",
    "build": "pnpm exec turbo run build",
    "start:backend": "node scripts/start-backend.mjs",
    "lint": "pnpm exec turbo run lint",
    "lint:fix": "pnpm exec turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm exec turbo run clean && rm -rf node_modules",
    "typecheck": "pnpm exec turbo run typecheck",
    "test": "pnpm exec turbo run test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
